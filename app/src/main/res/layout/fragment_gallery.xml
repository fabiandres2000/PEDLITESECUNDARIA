<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".ui.gallery.GalleryFragment">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="@drawable/fondorecursos"
        android:orientation="vertical">

        <View
            android:id="@+id/divider5"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:background="@color/cardview_shadow_end_color" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="207dp"
            android:orientation="horizontal">

            <Space
                android:layout_width="141dp"
                android:layout_height="205dp"
                android:layout_weight="1" />

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="414dp"
                android:layout_height="170dp"
                android:layout_weight="1"
                android:clickable="true"
                android:contentDescription="TODO"
                app:srcCompat="@drawable/grado6" />

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="364dp"
                android:layout_height="170dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/grado7" />

            <Space
                android:layout_width="142dp"
                android:layout_height="205dp"
                android:layout_weight="1" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="219dp"
            android:orientation="horizontal"
            android:paddingLeft="16dp">

            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="483dp"
                android:layout_height="170dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/grado8" />

            <ImageView
                android:id="@+id/imageView6"
                android:layout_width="344dp"
                android:layout_height="182dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/descargar_todo" />

            <ImageView
                android:id="@+id/imageView7"
                android:layout_width="512dp"
                android:layout_height="170dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/grado9" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="270dp"
            android:divider="@null"
            android:dividerHeight="0dp"
            android:orientation="horizontal">

            <Space
                android:layout_width="100dp"
                android:layout_height="200dp"
                android:layout_weight="1" />

            <ImageView
                android:id="@+id/imageView8"
                android:layout_width="488dp"
                android:layout_height="170dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/grado10" />

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="406dp"
                android:layout_height="170dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/grado11" />

            <Space
                android:layout_width="149dp"
                android:layout_height="209dp"
                android:layout_weight="1" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

        </LinearLayout>

    </LinearLayout>

</LinearLayout>